@model GameViewModel

@Html.HiddenFor(m => m.Id)

@Html.LabelFor(m => m.Key)
<br>
@Html.EditorFor(m => m.Key)
@Html.ValidationMessageFor(m => m.Key)

<br>

@Html.LabelFor(m => m.Description)
<br>
@Html.TextAreaFor(m => m.Description, 5, 20, new { resize = "none" })
@Html.ValidationMessageFor(m => m.Description)

<br>

@Html.LabelFor(m => m.Price)
<br>
@Html.EditorFor(m => m.Price)
@Html.ValidationMessageFor(m => m.Price)

<br>

@Html.LabelFor(m => m.Discontinued)
<br>
@Html.EditorFor(m => m.Discontinued)
@Html.ValidationMessageFor(m => m.Discontinued)

<br>

@Html.LabelFor(m => m.UnitsInStock)
<br>
@Html.EditorFor(m => m.UnitsInStock)
@Html.ValidationMessageFor(m => m.UnitsInStock)

<br>

@Html.LabelFor(m => m.PublishedDate)
<br>
@Html.EditorFor(m => m.PublishedDate)
@Html.ValidationMessageFor(m => m.PublishedDate)

<br>

@Html.LabelFor(m => m.Genres)
<br>

@for (int i = 0; i < Model.Genres.Count; i++)
{
    @Html.CustomCheckBox("Genre" + i, "NameGenres", Model.Genres[i].Id, Model.Genres[i].IsChecked)
    @Html.Label("Genre" + i, Model.Genres[i].Name)
}

<br>

@Html.LabelFor(m => m.PlatformTypes)
<br>
@for (int i = 0; i < Model.PlatformTypes.Count; i++)
{
    @Html.CustomCheckBox("PlatformType" + i, "NamePlatformTypes", Model.PlatformTypes[i].TypeName, Model.PlatformTypes[i].IsChecked)
    @Html.Label("PlatformType" + i, Model.PlatformTypes[i].TypeName)
}

<br>
@Html.LabelFor(m => m.SelectedPublisher)
<br>
@Html.DropDownListFor(m => m.SelectedPublisher, new SelectList(Model.Publishers, "Id", "CompanyName"), Model.Publisher != null ? Model.Publisher.CompanyName : "Not spesified")
