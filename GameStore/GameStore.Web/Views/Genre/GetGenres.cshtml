@model IEnumerable<GenreViewModel>

@{
    ViewBag.Title = "GetGenres";
}

<h2>GetGenres</h2>

<p>
    @Html.ActionLink("Create New", "new")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParentGenreName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentGenreName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { key = item.Name }) |
                @Html.ActionLink("Delete", "Delete", new { key = item.Name })
            </td>
        </tr>
    }

</table>


