@model IEnumerable<GenreViewModel>

@{
    ViewBag.Title = Resources.Genres;
}

<h2>@Resources.Genres'</h2>

<p>
    @Html.ActionLink(Resources.Add, "new")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParentGenreName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentGenreName)
            </td>
            <td>
                @if (item.IsSqlEntity == true)
                {
                    @Html.ActionLink(Resources.Edit, "Edit", new {key = item.Name}); <span>|</span>
                    @Html.ActionLink(Resources.Delete, "Delete", new {key = item.Name});
                }
            </td>
        </tr>
    }

</table>


