@model UserViewModel

@{
    ViewBag.Title = Resources.Registration;
}

<div class="container">
    @using (Html.BeginForm())
            {
        <div class="col-md-12">
            <h2>@Resources.Registration</h2>

            @Html.AntiForgeryToken()
            <div class="validation-errors">
                @Html.ValidationSummary(false)
            </div>
            <fieldset>
                @Html.EditorForModel()
                <input type="submit" value="@Resources.Register" />
            </fieldset>
        </div>
    }
</div>



